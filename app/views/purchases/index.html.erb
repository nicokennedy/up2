<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">User</th>
      <th scope="col">Material</th>
      <th scope="col">Provaider</th>
    </tr>
  </thead>
  <tbody>
  <% @purchases.each_with_index do |purchase, index| %>
    <tr>
      <th scope="row"><%=index+1%></th>
      <td><%= link_to purchase.user.first_name, purchase_path(purchase)%></td>
      <td><%=purchase.material%></td>
      <td><%=purchase.provaider%></td>
    </tr>
  <%end%>
  </tbody>
</table>
